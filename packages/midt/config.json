{
  "source": [
    "tokens/**/*.json"
  ],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "build/scss/",
      "files": [
        {
          "destination": "_variables.scss",
          "format": "scss/variables",
          "options": {
            "showFileHeader": false
          }
        }
      ]
    },
    "css": {
      "transformGroup": "css",
      "buildPath": "build/css/",
      "files": [
        {
          "destination": "variables.css",
          "format": "css/variables",
          "options": {
            "outputReferences": true,
            "showFileHeader": false
          }
        },
        {
          "destination": "mapsindoors-map-variables.css",
          "format": "css/variables",
          "options": {
            "outputReferences": true,
            "selector": ".mapsindoors-map",
            "showFileHeader": false
          }
        }
      ]
    },
    "json/nested": {
      "buildPath": "build/json/",
      "files": [
        {
          "destination": "variables.json",
          "format": "json/nested",
          "showFileHeader": false
        }
      ]
    }
  }
}